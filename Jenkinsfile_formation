pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-p 8090:8080' 
        } 
    }
    stages {
        stage('Clean') {
            
            steps {
                sh 'mvn clean'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn verify -DskipTests'
            }
        }
    }
}